<div id="app">

  <div class="row column">
    <div>
      <filters>
        <%
          article_types = get_article_types

          article_types.each do |type|
            concat "<checkbox name='#{type.name}' ref='checkbox'></checkbox>".html_safe
          end
        %>

        <%
        articles = @cms_page.children.published

        if articles.any? %>
          <articles>

            <% articles.each do |a| %>c

              <article-listing category="<%= cms_block_content(:article_type, a) %>" ref="article">
                <h3><%= link_to a.label, a.url(:relative) %></h3>

                <% if(!cms_block_content(:image, a).to_s.strip.empty?)
                  image_tag cms_block_content(:image, a).file.url(:small), alt: a.label
                end %>

                <div>
                  <%= cms_block_content(:introduction, a) %>
                </div>
              </article-listing>

            <% end %>

          </articles>
        <% end %>

      </filters>
    </div>
  </div>

</div>