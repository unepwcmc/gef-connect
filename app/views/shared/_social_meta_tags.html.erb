<!-- Facebook card -->
<meta property="og:title" content="<%= yield(:fb_title).presence || 'Connect' %>">
<meta property="og:description" content="<%= yield(:fb_description).presence || 'Mainstreaming biodiversity into the heart of government decision making' %>">
<meta property="og:image" content="<%= yield(:fb_image).presence || "#{root_url.gsub(/\/$/, '')}/connect-facebook.jpg" %>">
<meta property="og:url" content="<%= yield(:fb_url).presence || root_url.gsub(/\/$/, '') %>">
<meta property="og:site_name" content="<%= yield(:fb_site_name).presence || 'Connect' %>"/>

<!-- Twitter card -->
<meta name="twitter:card" content="<%= yield(:tw_image).present? ? 'summary_large_image' : 'summary' %>" />
<meta name="twitter:title" content="<%= yield(:tw_title).presence || 'Connect' %>" />
<meta name="twitter:description" content="<%= yield(:tw_description).presence || 'Mainstreaming biodiversity into the heart of government decision making' %>" />
<% if yield(:tw_image).present? %>
<meta name="twitter:image" content="<%= yield(:tw_image) %>" />
<% end %>

