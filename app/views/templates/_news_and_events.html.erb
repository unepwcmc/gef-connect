          end
        %>

        <%
        articles = @cms_page.children.published

        if articles.any? %>
          <articles>

            <% articles.each do |a| %>

              <article-listing category="<%= cms_block_content(:article_type, a) %>" ref="article">
                <h3><%= link_to a.label, a.url(:relative) %></h3>
                <%= image_tag cms_block_content(:image, a).file.url(:small), alt: a.label %>
                <div>
                  <%= cms_block_content(:introduction, a) %>
                </div>
